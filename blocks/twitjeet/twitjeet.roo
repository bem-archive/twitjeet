body
{
    background: #000;
}

.twitjeet
{
    font-family: Arial;

    width: 500px;
    margin: 0 auto;

    border-radius: 20px;
    background: #7ce;

    &__form,
    &__content
    {
        padding: 2em;
    }

    &__content
    {
        padding-top: 0;
    }

    .input
    {
        margin-right: 1em;
    }

    &__tweet
    {
        margin-bottom: 0.3em;
        padding: 1em;
        border-radius: 10px;

        background: #fff;
    }
}