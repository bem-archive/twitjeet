.twitjeet
{
    border-radius: 20px;
    display: inline-block;
    background: #ccc;

    &__form,
    &__content
    {
        padding: 2em;
    }

    &__content
    {
        padding-top: 0;
    }

    .input
    {
        margin-right: 1em;
    }

    &__tweet
    {
        width: 400px;
        margin-bottom: 0.3em;
        padding: 1em;
        border-radius: 10px;

        background: #fff;
    }
}
